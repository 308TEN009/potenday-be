{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development SERVER_PORT=3000 nest start --watch --debug",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test SERVER_PORT=3000 jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ci": "yarn install --immutable --immutable-cache --check-cache",
    "typeorm:dev": "env-cmd -f ./envs/.env.development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:prod": "env-cmd -f ./envs/.env.production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:revert": "yarn run typeorm -- --dataSource=src/modules/database/data-sources/postgres.datasource.ts migration:revert"
  },
  "dependencies": {
    "@bull-board/api": "^5.7.1",
    "@bull-board/express": "^5.7.1",
    "@bull-board/ui": "5.7.1",
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/bull": "^10.0.1",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.4.3",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/platform-socket.io": "^9.4.3",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.4",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^9.4.3",
    "@toss/nestjs-aop": "^2.1.0",
    "@types/cls-hooked": "^4.3.4",
    "add": "^2.0.6",
    "axios": "^1.4.0",
    "bull": "^4.10.4",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.30.0",
    "ejs": "^3.1.9",
    "handlebars": "^4.7.7",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "mysql2": "^3.5.2",
    "nodemailer": "^6.9.4",
    "openai": "^3.3.0",
    "passport": "^0.6.0",
